{
  "name": "soliluna-v3",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @soliluna/api dev & pnpm --filter @soliluna/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm test:unit",
    "test:unit": "pnpm --filter @soliluna/shared test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "deploy": "pnpm --filter @soliluna/web build && pnpm --filter @soliluna/api deploy"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1"
  }
}
